<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        ...
    </style>

    <!-- Estilo para el AlertDialog con texto blanco -->
    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/orange</item>
        <item name="android:background">@color/lightBlack</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">@color/EasyFitnessColor</item>
    </style>

    <style name="WhiteText">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
