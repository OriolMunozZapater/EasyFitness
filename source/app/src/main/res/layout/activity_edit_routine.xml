<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#A8711D"
        app:titleEnabled="false">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:contentDescription="Back Arrow" />

        <!-- TextView personalizado para el título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EDIT ROUTINE"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="450dp">

                <!-- Aixo és cada rutina-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/EasyFitnessColor"
                        android:layout_marginBottom="20dp"/>

                    <LinearLayout
                        android:id="@+id/routine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_imatge_round" />
                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Bench Press"
                            android:textColor="@color/EasyFitnessColor"
                            android:textSize="16sp"
                            android:gravity="center_horizontal"
                            android:layout_weight="1" />

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageButton
                                android:id="@+id/eliminate_cross"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_cross"
                                android:background="@null"/>
                        </FrameLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@color/EasyFitnessColor"
                        android:layout_marginTop="20dp"/>


                </LinearLayout>
            </ScrollView>

            <Button
                android:id="@+id/btnAddExercise1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:background="@drawable/buton_background"
                android:backgroundTint="@color/EasyFitnessColor"
                android:text="+ Add exercise"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_below="@id/layout"
            android:layout_alignParentBottom="true">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/lowBar"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="#A8711D"
                app:titleEnabled="false"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_home"
                    android:layout_gravity="start"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"/>

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/training_routines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_training_routines"
                    android:layout_gravity="start|right"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"/>

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/training_session"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_training"
                    android:layout_gravity="left|end"
                    android:paddingLeft="25dp"
                    android:paddingRight="20dp"/>

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:background="#000000"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_profile"
                    android:layout_gravity="end"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"/>

            </androidx.appcompat.widget.Toolbar>

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>