<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#A8711D"
            app:titleEnabled="false">

            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                android:layout_gravity="start"
                android:layout_marginStart="10dp"
                android:contentDescription="Back Arrow" />

            <!-- TextView personalizado para el título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EDIT EXERCISE"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_gravity="center" />

        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="450dp">

                    <!-- Aixo és nom de l'exercici-->
                    <EditText
                        android:id="@+id/exName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Exercise name"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="25dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="#A8711D"
                        android:backgroundTint="#A8711D" />

                    <!-- Aixo és nom de l'exercici-->
                    <EditText
                        android:id="@+id/exDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Descripcio"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="30dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="#A8711D"
                        android:backgroundTint="#A8711D"
                        android:layout_below="@id/exName"
                        />

                    <EditText
                        android:id="@+id/exTipo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Tipus"
                        android:inputType="textEmailAddress"
                        android:layout_marginTop="30dp"
                        android:textColor="@android:color/white"
                        android:textColorHint="#A8711D"
                        android:backgroundTint="#A8711D"
                        android:layout_below="@id/exDesc"
                        />

                    <TextView
                        android:id="@+id/evaluateText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VALORATE"
                        android:textColor="#A8711D"
                        android:layout_marginTop="30dp"
                        android:layout_centerHorizontal="true"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_gravity="center"
                        android:layout_below='@id/exTipo'/>

                    <RatingBar
                        android:id="@+id/exExerciseRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/evaluateText"
                        android:layout_marginTop="20dp"
                        android:layout_centerHorizontal="true"
                        android:numStars="5"
                        android:rating="3"
                        android:stepSize="1"
                        android:progressTint="#A8711D"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/btnAddExercise"
                    android:layout_width="200dp"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom|center"
                    android:backgroundTint="@color/EasyFitnessColor"
                    android:text="Save"
                    android:textColor="@color/black"
                    android:textSize="28sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal"
                android:layout_below="@id/layout"
                android:layout_alignParentBottom="true">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/lowBar"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:background="#A8711D"
                    app:titleEnabled="false"
                    android:layout_gravity="bottom">

                    <ImageView
                        android:id="@+id/home"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_home"
                        android:layout_gravity="start"
                        android:paddingLeft="20dp"
                        android:paddingRight="25dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#000000"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:id="@+id/training_routines"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_training_routines"
                        android:layout_gravity="start|right"
                        android:paddingLeft="20dp"
                        android:paddingRight="25dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#000000"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:id="@+id/training_session"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_training"
                        android:layout_gravity="left|end"
                        android:paddingLeft="25dp"
                        android:paddingRight="20dp"/>

                    <View
                        android:layout_width="3dp"
                        android:layout_height="match_parent"
                        android:background="#000000"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"/>

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_profile"
                        android:layout_gravity="end"
                        android:paddingRight="20dp"
                        android:paddingLeft="20dp"/>

                </androidx.appcompat.widget.Toolbar>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>