<!-- routine_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingRight="20dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/EasyFitnessColor" />

    <TextView
        android:id="@+id/textViewRoutineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rutina"
        android:textColor="@color/EasyFitnessColor"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/tvRoutineDescr"
        android:layout_below="@id/textViewRoutineName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descripcio rutina"
        android:textColor="@color/EasyFitnessColor"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
