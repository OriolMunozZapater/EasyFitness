<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#A8711D"
        app:titleEnabled="false">

        <ImageView
            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:layout_gravity="start"
            android:layout_marginStart="10dp"
            android:contentDescription="Back Arrow" />

        <!-- TextView personalizado para el título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRAINING"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btnNewExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="End"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_gravity="end"/>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:background="@color/black"
        android:padding="15dp">

        <RelativeLayout
            android:id="@+id/separatingLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duración"
                android:textColor="@color/EasyFitnessColor"
                android:textSize="15sp"
                android:layout_marginStart="10dp"/>

            <Chronometer
                android:id="@+id/chronometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/EasyFitnessColor"
                android:textSize="15sp"
                android:layout_below="@id/textViewDuration"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:id="@+id/textTotalSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="total Series"
                android:textColor="@color/EasyFitnessColor"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/chronometer"
                android:background="@color/EasyFitnessColor"
                android:layout_marginTop="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/separatingLine">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!-- cada un serà un exercici -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/exerciseShow"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:id="@+id/routine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_imatge_round" />
                            </FrameLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="Bench Press"
                                android:textColor="@color/EasyFitnessColor"
                                android:textSize="16sp"
                                android:gravity="center_horizontal"
                                android:layout_weight="1" />

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageButton
                                    android:id="@+id/eliminate_cross"
                                    android:layout_width="40dp"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:src="@drawable/ic_cross"
                                    android:background="@null"/>
                            </FrameLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvExerciseDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/exerciseShow"
                        android:textColor="@color/EasyFitnessColor"
                        android:text="Aqui anirà la descr de l'exercici"
                        android:textSize="18sp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvExerciseDescription"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/tvNumSerie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/EasyFitnessColor"
                            android:textSize="20sp"
                            android:text="SERIE"/>

                        <TextView
                            android:id="@+id/tvPesSerie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/EasyFitnessColor"
                            android:textSize="20sp"
                            android:text="WEIGHT"
                            android:layout_centerHorizontal="true"/>

                        <TextView
                            android:id="@+id/tvRepsSerie"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/EasyFitnessColor"
                            android:textSize="20sp"
                            android:text="REPS"
                            android:layout_alignParentRight="true"/>



                    </RelativeLayout>

                </RelativeLayout>

            </ScrollView>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>