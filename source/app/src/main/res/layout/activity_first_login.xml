<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#A8711D"
        app:titleEnabled="false">

        <!-- TextView personalizado para el tÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME TO EASY FITNESS"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/toolbar"
        android:background="@color/black"
        android:padding="32dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="550dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/welcomeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanks for registering into Easy Fitness. Please fill the following camps in order to register you're progress."
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:textColor="#A8711D" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/EasyFitnessColor"
                    android:layout_marginTop="25dp" />

                <EditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:textColor="@android:color/white"
                    android:textColorHint="#A8711D"
                    android:backgroundTint="#A8711D"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/etSecondName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Second Name"
                    android:layout_marginBottom="10dp"
                    android:inputType="text"
                    android:textColor="@android:color/white"
                    android:textColorHint="#A8711D"
                    android:backgroundTint="#A8711D"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/etWeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Weight"
                    android:layout_marginBottom="10dp"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:textColorHint="#A8711D"
                    android:backgroundTint="#A8711D"
                    android:layout_marginTop="20dp"/>

                <EditText
                    android:id="@+id/etHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Height"
                    android:layout_marginBottom="10dp"
                    android:inputType="numberDecimal"
                    android:textColor="@android:color/white"
                    android:textColorHint="#A8711D"
                    android:backgroundTint="#A8711D"
                    android:layout_marginTop="20dp"/>

                <TextView
                    android:id="@+id/etDateOfBirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Born Date"
                    android:textColor="#A8711D"
                    android:textColorHint="#A8711D"
                    android:backgroundTint="#A8711D"
                    android:textSize="19dp"
                    android:drawableEnd="@drawable/ic_calendar"
                    android:drawablePadding="20dp"
                    android:inputType="none"
                    android:layout_marginTop="20dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/EasyFitnessColor"
                    android:layout_marginTop="30dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="20dp">

                    <TextView
                        android:id="@+id/textViewSex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sex:"
                        android:textSize="18sp"
                        android:textColor="@color/EasyFitnessColor"/>

                    <Button
                        android:id="@+id/btnSexSelect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select"
                        android:layout_marginStart="8dp"
                        android:textSize="18sp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/EasyFitnessColor"
                        android:onClick="showSexoOptions"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/EasyFitnessColor"
                    android:layout_below="@id/layout2"
                    android:layout_marginTop="10dp" />
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/forwardArrow"
                android:layout_width="82dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:src="@drawable/ic_forward_arrow" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
