<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#A8711D"
        app:titleEnabled="false">

        <!-- TextView personalizado para el título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XARXA SOCIAL"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/layout1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">

            <LinearLayout
                android:id="@+id/boton1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguidos"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/botonSeguidos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow"
                        android:background="@android:color/transparent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="178dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boton2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Seguidores"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/botonSeguidores"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow"
                        android:background="@android:color/transparent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="160dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boton3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Consultar Rutinas en Linea"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/botonConsultaRutinas"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow"
                        android:background="@android:color/transparent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="20dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boton4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Descubrir Usuarios"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/botonUsersSeguir"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow"
                        android:background="@android:color/transparent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="90dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Nuevo botón "Reforzar Partes" -->
            <LinearLayout
                android:id="@+id/boton5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Reforzar Partes"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/botonReforzarPartes"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow"
                        android:background="@android:color/transparent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="120dp" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boton6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Publicar Videos"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/botonPublicarVideos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_add"
                        android:background="@android:color/transparent"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="120dp" />

                </LinearLayout>
            </LinearLayout>

            <!-- Nuevo botón para añadir comentario sobre la App -->
            <LinearLayout
                android:id="@+id/boton7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Añadir Comentario sobre App"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/botonComentarioApp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/boton8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Valorar un Ejercicio"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/ValorarEjercicio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true" />

                </LinearLayout>
            </LinearLayout>

            <!-- Nuevo botón para mostrar ranking -->
            <LinearLayout
                android:id="@+id/boton9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:background="@color/layout_type1"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mostrar Ranking"
                        android:textColor="@color/white"
                        android:background="@color/layout_type1"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_gravity="center" />

                    <ImageButton
                        android:id="@+id/botonMostrarRanking"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_arrow"
                        android:background="@android:color/transparent"
                        android:layout_centerVertical="true" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Linear layout para la barra de abajo -->
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <!-- Toolbar para la barra inferior -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/lowBar"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="#A8711D"
            app:titleEnabled="false"
            android:layout_gravity="bottom">

            <!-- Iconos de la barra inferior -->
            <ImageView
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:layout_gravity="start"
                android:paddingLeft="20dp"
                android:paddingRight="25dp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/training_routines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_training_routines"
                android:layout_gravity="start|right"
                android:paddingLeft="20dp"
                android:paddingRight="25dp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/training_session"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_training"
                android:layout_gravity="left|end"
                android:paddingLeft="25dp"
                android:paddingRight="20dp" />

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <ImageView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"
                android:layout_gravity="end"
                android:paddingRight="20dp"
                android:paddingLeft="20dp" />

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
</RelativeLayout>
